<% title 'log for your records' %>
 
<%= link_to "Add New Row", :action => "new" %>
<br/>
<br/>
    <table border="1">
      <tr>
        <th>User</th>
        <th>Time Of Entry</th>
      </tr>
      
      <% @logged_records.each do |rec| %>
        <tr>
          <td> <%=rec.login %> </td> 
          <td> <%=rec.click_date_string %> </td>
          <td> <%=rec.working_day_id %> </td>
        </tr>
    <% end %>
  </table>
  <br/>

  <h3>Working days </h3>
  <% @logged_working_days.each do |lwd| %>
    <%=lwd.login %>
    <%=lwd.wday %>
    <%=lwd.check_in %>
    <%=lwd.check_out %>
    <%=lwd.duration %>
    <br/>
  <%end%>

